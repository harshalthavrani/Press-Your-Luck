@model A3_HT3610.Models.Game

@{
    ViewData["Title"] = "Start Game";
}

<h1>Welcome, @ViewData["PlayerName"]</h1>

<h4>How many coins would you like to wager?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Start">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameCoins" class="control-label"></label>
                <input asp-for="GameCoins" class="form-control" />
                <span asp-validation-for="GameCoins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Start Playing!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
