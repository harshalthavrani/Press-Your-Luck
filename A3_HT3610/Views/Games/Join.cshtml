@model A3_HT3610.Models.Player

@{
    ViewData["Title"] = "Join Game";
}

<div class="text-center jumbotron">
    <h1>Welcome to Press Your Luck!</h1>
    @*<a asp-controller="Game" asp-action="Index">Check out the Tile List</a>*@
</div>
<p>Please enter your name and the number of coins you have to get started.</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Join">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCoins" class="control-label"></label>
                <input asp-for="TotalCoins" class="form-control" />
                <span asp-validation-for="TotalCoins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Join the Game!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
